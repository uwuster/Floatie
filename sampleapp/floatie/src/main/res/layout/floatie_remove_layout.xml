<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/remove_circle"
        android:layout_width="@dimen/floatie_remove_circle_width"
        android:layout_height="@dimen/floatie_remove_circle_height"
        android:layout_margin="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/circle" />

    <ImageView
        android:id="@+id/remove_x"
        android:layout_width="@dimen/floatie_remove_x_width"
        android:layout_height="@dimen/floatie_remove_x_height"
        android:layout_gravity="center"
        android:src="@drawable/cross"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@id/remove_circle"
        app:layout_constraintRight_toRightOf="@id/remove_circle"
        app:layout_constraintTop_toTopOf="@id/remove_circle"
        app:layout_constraintBottom_toBottomOf="@id/remove_circle"/>

</androidx.constraintlayout.widget.ConstraintLayout>